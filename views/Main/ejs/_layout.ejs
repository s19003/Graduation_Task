<div class="container-sm d-flex flex-column justify-content-center">
  <main>
    <!-- タグ -->
    <div class="container-sm d-flex">
      <div class="container-fluid mt-1">
        <label for="twitter_tag" class="form-label">Twitter ハッシュタグ</label>
        <div class="input-group mb-3 border border-info border-1 rounded">
          <span class="input-group-text" id="basic-addon3">#</span>
          <input
            type="text"
            class="form-control twitter_tag"
            id="twitter_tag"
            placeholder="ITカレッジ沖縄"
            aria-describedby="basic-addon3"
          />
        </div>
      </div>
      <div class="container-fluid mt-1">
        <label for="youtube_url" class="form-label">Youtube URL</label>
        <div class="input-group mb-3 border border-danger border-1">
          <input
            type="text"
            class="form-control youtube_url"
            id="youtube_url"
            placeholder="https://www.youtube.com/watch?v=XXXXXXX"
            aria-describedby="basic-addon3"
          />
        </div>
      </div>
    </div>

    <!-- フォーマット -->
    <div class="container-fluid d-flex flex-column justify-content-center mt-3">
      <div class="h3">配信フォーマットの選択</div>

      <div class="container-fluid d-flex justify-content-center">
        <input
          type="radio"
          class="radio"
          id="niconico"
          name="format"
          value="niconico"
          checked
        /><label for="niconico">ニコニコ</label>
        <input type="radio" class="radio" id="youtube" name="format" value="youtube" /><label
          for="youtube"
          >Youtube</label
        >
      </div>
    </div>

    <!-- レイアウト -->
    <div class="container-fluid d-flex flex-column justify-content-center mt-3">
      <div class="container-fluid">
        <label for="fontSize" class="h3 form-label mt-5">フォントサイズ</label>
        <div class="container-fluid d-flex justify-content-evenly">
          <p class="h5">小</p>
          <input class="form-range size" type="range" id="fontSize" min="20" max="70" step="10" />
          <p class="h5">大</p>
        </div>
      </div>

      <div class="container-fluid">
        <label for="weight" class="h3 form-label mt-3">フォントの太さ</label>
        <div class="container-fluid d-flex justify-content-evenly">
          <p class="h5">小</p>
          <input
            class="form-range weight"
            type="range"
            id="weight"
            min="200"
            max="600"
            step="200"
          />
          <p class="h5">大</p>
        </div>
      </div>

      <div class="container-fluid">
        <label for="opacity" class="h3 form-label mt-3">透明度</label>
        <div class="container-fluid d-flex justify-content-evenly">
          <p class="h5">小</p>
          <input
            class="form-range opacity"
            type="range"
            id="opacity"
            min="0.2"
            max="1"
            step="0.1"
          />
          <p class="h5">大</p>
        </div>
      </div>
    </div>
  </main>
</div>
